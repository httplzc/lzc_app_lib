<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ParentView">
        <!--是否拦截事件-->
        <attr name="InterceptTouch" format="boolean"/>
        <attr name="canScroll" format="boolean"/>
        <attr name="content_not_scroll" format="boolean"/>
        <attr name="is_debug" format="boolean"/>
        <attr name="show_progress" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="FitLinearLayout">
        <attr name="l_ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="FitRelativeLayout">
        <attr name="r_ratio" format="float"/>
        <attr name="enable" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="OverScrollScrollView">
        <attr name="flingOverScrollEnable_sv" format="boolean"></attr>
        <attr name="dragOverScrollEnable_sv" format="boolean"></attr>
        <attr name="dragOverScrollHeadEnable_sv" format="boolean"></attr>
        <attr name="dragOverScrollFootEnable_sv" format="boolean"></attr>
        <attr name="OverScrollHeadColor" format="color"></attr>
        <attr name="OverScrollFootColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="OverScrollListView">
        <attr name="flingOverScrollEnable_lv" format="boolean"></attr>
        <attr name="dragOverScrollEnable_lv" format="boolean"></attr>
        <attr name="dragOverScrollHeadEnable_lv" format="boolean"></attr>
        <attr name="dragOverScrollFootEnable_lv" format="boolean"></attr>
        <attr name="OverScrollListHeadColor" format="color"></attr>
        <attr name="OverScrollListFootColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="LoadImg">
        <attr name="res" format="reference"></attr>
    </declare-styleable>
    <declare-styleable name="RefreshScrollParentViewBase">
        <attr name="postion" format="integer"></attr>
        <attr name="headColor" format="color"></attr>
        <attr name="bottomColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="count" format="integer"/>
        <attr name="ratio" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ProgressTextView">
        <attr name="isShowSin" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DrawableCenterButton">
        <attr name="fangxiang" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ArcImgView">
        <attr name="maxScrollHeight" format="dimension"/>
        <attr name="minScrollHeight" format="dimension"/>
        <attr name="arc_ratio" format="float"/>
        <attr name="img_ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="HeadScrollView">
        <attr name="head_layout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LoopViewPager">
        <attr name="enable_auto_scroll" format="boolean"/>
        <attr name="indicator_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VideoPlayer">
        <attr name="video_aspect_ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="CircleTextView">
        <attr name="full_color" format="color"></attr>
        <attr name="line_width" format="dimension"/>
        <attr name="line_color" format="color"/>
    </declare-styleable>
    
    <declare-styleable name="TabView">
        <attr name="padding_landscape" format="dimension"/>
        <attr name="padding_vertical" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ImgListView">
        <attr name="img_list_padding_landscape" format="dimension"/>
        <attr name="img_list_padding_vertical" format="dimension"/>
    </declare-styleable>
</resources>