<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/mydialog_bg">

        <TextView
            android:id="@+id/mydialog_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="45dp"
            tools:text="您确定要退出登录?"
            android:background="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_below="@id/mydialog_remind">

            <TextView
                android:id="@+id/mydialog_cancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mydialog_btn_selector_left"
                android:gravity="center"
                android:padding="13dp"
                android:text="取消"
                android:textSize="15sp" />

            <View
                android:layout_width="0.8dp"
                android:background="@color/dialog_btn_normal_line"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/mydialog_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mydialog_btn_selector_right"
                android:gravity="center"
                android:padding="13dp"
                android:text="确定"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
