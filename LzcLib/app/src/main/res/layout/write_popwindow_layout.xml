<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

        <TextView
            android:id="@+id/tuwen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/pic_pick_background_top_corner"
            android:gravity="center"
            android:textColor="@color/pic_img_color"
            android:textSize="18sp"
            android:text="拍照" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/press_color"/>

        <TextView
            android:id="@+id/shipin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/pic_pick_background_bottom_corner"
            android:layout_marginBottom="10dp"
            android:textColor="@color/pic_img_color"
            android:textSize="18sp"
            android:text="图库" />


    <TextView
        android:id="@+id/quexiao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/pic_pick_background"
        android:text="取消"
        android:gravity="center"
        android:textColor="@color/pic_img_color"
        android:textSize="18sp" />

</LinearLayout>
